body
    padding-top: 50px;
    background-color: whitesmoke
    
@font-face
    font-family: entypo
    src: url('/fonts/entypo/entypo.ttf')

.jumbotron
    background-image: url('/images/headerimage6_x2.jpg')
    background-size: cover
    background-position: top 50px
    margin-bottom: 0px
    padding-top: 70px
    padding-bottom: 70px

.headline
    background-color: rgba(0,0,0,0.4)
    color: white
    text-align: center
    padding: 10px
    h1
        margin-bottom: 20px

.walkthrough
    background-color: #188d68
    color: white
    width: 100%
    h1, h2
        text-align: center
    img
        display: block
        margin: auto
        padding-top: 10px
    a
        display: block
        margin: auto
        width: 60%
        margin-top: 20px
        margin-bottom: 15px
    .col-md-4:nth-child(2) img
        padding-top: 30px

.moreInfo
    padding-bottom: 20px
    background-color: white
    width: 100%
    h1, h2
        text-align: center
    img
        padding-top: 30px
        display: block
        margin: auto
    a
        display: block
        margin: auto
        width: 80%

#more
    // Allow scrollspy to work without fixed navbar getting in the way of top line
    padding-top: 50px
    margin-top: -50px

.about
    ul
        list-style-type: none
    img
        display: block
        margin: auto

#about
    // Allow scrollspy to work without fixed navbar getting in the way of top line
    margin-top: -50px
    padding-top: 70px

.signupForm
    margin: 0 auto
    margin-top: 100px
    margin-bottom: 100px
    padding: 0px

.signupHeader
    background-color: #188d68
    color: white
    h1
        text-align: center
        padding-top: 20px
        padding-bottom: 20px
        margin: 0px
        color: white

.signupBody
    background-color: lightgrey
    text-align: center
    padding: 20px
    h2
        margin: 0px
        padding-top: 20px
        color: black
    form
        padding: 20px 0px 20px
    input
        border: none
        height: 40px
        padding: 10px
        border-radius: 0px
    input:focus
        outline: none
        box-shadow: none


