body
    padding-top: 60px;
    
@font-face
    font-family: entypo
    src: url('/fonts/entypo/entypo.ttf')

.jumbotron
    background-image: url('/images/headerimage6_x2.jpg')
    background-size: cover
    height: 500px
    margin-bottom: 0px

.headline
    background-color: rgba(0,0,0,0.4)
    color: white
    text-align: center
    margin-top: 75px
    padding: 10px
    h1
        margin-bottom: 20px

.walkthrough
    background-color: #188d68
    color: white
    width: 100%
    h1, h2
        text-align: center
        font-size: 25px
    img
        display: block
        margin: auto
        padding-top: 10px
    a
        display: block
        margin: auto
        width: 20%
        margin-top: 20px
        margin-bottom: 15px

.moreInfo
    h1, h2
        text-align: center
    img
        padding-top: 20px


.col-md-4:nth-child(2) img
    padding-top: 30px

.signupForm
    margin: 0 auto
    margin-top: 100px
    margin-bottom: 100px
    padding: 0px

.signupHeader
    background-color: purple
    h1
        text-align: center
        padding-top: 20px
        padding-bottom: 20px
        margin: 0px
        color: white

.signupBody
    background-color: lightgrey
    text-align: center
    h2
        margin: 0px
        color: white
    form
        padding: 30px
    label
        display: block
    input
        border: none
        height: 40px
        padding: 10px


